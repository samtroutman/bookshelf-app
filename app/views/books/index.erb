<h1>My Books</h1>


<% @books.each do |book| %>
   <h3><%= book.name %> <br></h3>
    By: <%= book.author %> <br>
    Genre: <%= book.genre %> <br>
    My Rating: <%= book.rating %><br>
    <a href="/books/<%= book.id %>/edit">Edit</a><br><br>
<% end %>
<br>
<p><a href="./books/new">Add a Book</a></p>

